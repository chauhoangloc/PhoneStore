@model PhoneStore.Models.SanPham
@using PhoneStore.Models 
@{
    ViewBag.Title = "Details";
    
}

<h2>Chi tiết sản phẩm</h2>

<div>
    <h4>SanPham</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản Phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSanPham)
        </dd>



        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaBan)
        </dd>

        <dt>
            Hình Sản Phẩm
        </dt>

        <dd>
            @Html.Image("../../" + Model.HinhAnh, Model.HinhAnh, "100","100")
        </dd>

        <dt>
            Loại Sản Phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiSanPham.TenLoaiSanPham)
        </dd>
        <dt></dt>
        <dd>
            <br />
            <a class="btn btn-success btn-sm " href="@Url.Action("AddToCart","Cart",new { MaSP=@Model.MaSanPham})">
                <span class="glyphicon glyphicon-shopping-cart"></span>Thêm vào giỏ hàng
            </a>
            <a class="btn btn-success btn-sm" href="@Url.Action("Index","Home",new { MaSP=@Model.MaSanPham})">Quay Lại</a>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaSanPham }) |
    @Html.ActionLink("Back to List", "Index")
</p>
